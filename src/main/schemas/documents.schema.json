{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://github.com/SteveLLamb/mediastandards-registry/0.1.0",
    "$comment": "Copyright, Steve LLamb <steve.llamb@gmail.com>",
    "title": "Schema for the Media Standards repo",
    "items": {
        "anyOf": [
            {
                "$id": "#/items/anyOf/0",
                "type": "object",
                "required": [
                    "docId",
                    "publisher",
                    "type",
                    "label",
                    "title",
                    "status"
                ],
                "additionalProperties": true,
                "properties": {
                    "docId": {
                        "type": "string",
                        "uniqueItems": true
                    },
                    "publisher": {
                        "type": "string"
                    },
                    "group": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "status": {
                        "type": "object",
                        "properties": { 
                            "statusNote": {
                                "type": "string"
                            },
                            "draft": {
                                "type": "boolean"
                            },
                            "active": {
                                "type": "boolean"
                            },
                            "amended": {
                                "type": "boolean"
                            },
                            "amendedDate": {
                                "type": "string"
                            },
                            "amendedBy": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    ]
                                }
                            },
                            "reaffirmed": {
                                "type": "boolean"
                            },
                            "reaffirmDate": {
                                "type": "string"
                            },
                            "stabilized": {
                                "type": "boolean"
                            },
                            "stabilizedDate": {
                                "type": "string"
                            },
                            "superseded": {
                                "type": "boolean"
                            },
                            "supersededDate": {
                                "type": "string"
                            },
                            "supersededBy": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string",
                                            "minLength": 1
                                        }
                                    ]
                                }
                            },
                            "withdrawn": {
                                "type": "boolean"
                            },
                            "withdrawnDate": {
                                "type": "string"
                            },
                            "unknown": {
                                "type": "boolean"
                            }
                        }
                    },
                    "details": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    },
                    "publicationDate": {
                        "type": "string"
                    },
                    "workInfo": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "group", "workType"
                            ],
                            "additionalProperties": true,
                            "properties": {
                                "group": {
                                    "type": "string"
                                },
                                "workType": {
                                    "type": "string",
                                    "enum": [ 
                                        "Intial Draft",
                                        "Revision",
                                        "Amendment",
                                        "Review",
                                        "Withdraw",
                                        "Systematic"
                                    ]
                                },
                                "workDoc": {
                                    "type": "string"
                                },
                                "groupLink": {
                                    "type": "string"
                                },
                                "reviewNeeded": {
                                    "type": "boolean"
                                },
                                "reviewPeriod": {
                                    "type": "string",
                                    "enum": [ 
                                        "1 Year",
                                        "5 Year",
                                        "Systematic"
                                    ]
                                },
                                "reviewDate": {
                                    "type": "string"
                                },
                                "recommendation": {
                                    "type": "string"
                                },
                                "approved": {
                                    "type": "boolean"
                                },
                                "notes": {
                                    "type": "string"
                                },
                                "otherWork": {
                                    "type": "string"
                                },
                                "updateDependency": {
                                    "type": "array",
                                    "additionalItems": true,
                                    "items": {
                                        "anyOf": [
                                            {
                                                "type": "string"
                                            }
                                        ]
                                    }
                                },
                                "assigned": {
                                    "type": "string"
                                },
                                "projectLink": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "relatedDocs": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                }
                            ]
                        }
                    },
                    "xmlNamespace": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1
                                }
                            ]
                        }
                    },
                    "usage": {
                        "type": "array",
                        "additionalItems": true,
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "enum": [ 
                                        "Accessibility",
                                        "Archive",
                                        "Audio",
                                        "Aux Data",
                                        "Captions",
                                        "Cinema Sound",
                                        "DCDM",
                                        "DCinema",
                                        "DCP Application",
                                        "DCP Core",
                                        "Digital Source",
                                        "Distribution",
                                        "Image",
                                        "IMF",
                                        "IMF Application",
                                        "Immersive Audio",
                                        "Interop",
                                        "JPEG2000",
                                        "KDM",
                                        "Measurement",
                                        "Metadata",
                                        "MXF Application",
                                        "MXF Core",
                                        "Operations",
                                        "Packaging",
                                        "Processing",
                                        "Projection",
                                        "Quality",
                                        "SDI",
                                        "Security",
                                        "Sign Language",
                                        "Sound",
                                        "Subtitles",
                                        "XML"
                                    ]
                                }
                            ]
                        }
                    },
                    "references": {
                        "type": "object",
                        "additionalProperties": true,
                        "properties": {
                            "normative": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "bibliographic": {
                                "type": "array",
                                "additionalItems": true,
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "github": {
                        "type": "string"
                    }
                }
            }
        ]
    }
}