{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://github.com/PrZ3r/MSRBot.io/groups/1.0.0",
    "$comment": "Copyright (c) 2025 [Steve LLamb](https://github.com/SteveLLamb) and [PrZ3r](https://github.com/PrZ3r)",
    "docTitle": "Schema for MSRBot.io - Groups",
    "items": {
        "anyOf": [
            {
                "$id": "#/items/anyOf/0",
                "type": "object",
                "required": [
                    "groupId",
                    "groupName",
                    "groupOrg",
                    "groupType",
                    "groupStatus"
                ],
                "additionalProperties": false,
                "properties": {
                    "groupAIs": {
                        "type": "string",
                        "format": "uri"
                    },
                    "groupBallots": {
                        "type": "string",
                        "format": "uri"
                    },
                    "groupCal": {
                        "type": "string",
                        "format": "uri"
                    },
                    "groupDesc": {
                        "type": "string"
                    },
                    "groupDocs": {
                        "type": "string",
                        "format": "uri"
                    },
                    "groupId": {
                        "type": "string",
                        "uniqueItems": true
                    },
                    "groupLink": {
                        "type": "string",
                        "format": "uri"
                    },
                    "resolvedGroupLink": {
                        "type": "string",
                        "format": "uri"
                    },
                    "groupName": {
                        "type": "string"
                    },
                    "groupOrg": {
                        "type": "string"
                    },
                    "groupRepo": {
                        "type": "string",
                        "format": "uri"
                    },
                    "resolvedGroupRepo": {
                        "type": "string",
                        "format": "uri"
                    },
                    "groupStatus": {
                        "type": "object",
                        "properties": { 
                            "active": {
                                "type": "boolean"
                            },
                            "assignedGroup": {
                                "type": "array",
                                "items": {
                                    "anyOf": [
                                        {
                                            "type": "string"
                                        }
                                    ]
                                }
                            },
                            "pending": {
                                "type": "boolean"
                            }
                        }
                    },
                    "groupSummary": {
                        "type": "string"
                    },
                    "groupType": {
                        "type": "string",
                        "enum": [
                            "SC",
                            "TC",
                            "ST", 
                            "AHG", 
                            "WG", 
                            "DG",
                            "SG",
                            "TF"                       
                        ]
                    },
                    "parentgroupId": {
                        "type": "string"
                    }
                }
            }
        ]
    }
}